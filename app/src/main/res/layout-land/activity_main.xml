<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Nanda"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 Januari 2025"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="725dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHarga"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvEstemasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estemasi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvRupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textSize="15sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40.000,-"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="190dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="55dp"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/iconAkun"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_marginTop="55dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/akun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="140dp"/>

        <ImageView
            android:id="@+id/iconPegawai"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/pegawai"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pegawai"
            android:textSize="20sp"
            android:layout_marginTop="170dp"
            android:layout_marginStart="140dp"/>

        <ImageView
            android:id="@+id/iconCabang"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/cabang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="20sp"
            android:layout_marginTop="250dp"
            android:layout_marginStart="140dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTransaksi"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toEndOf="@id/cvHarga"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/ivTransaksi"
            android:src="@drawable/tranksasi"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="45dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLayanan"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toEndOf="@id/cvTransaksi"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/iconLayanan"
            android:src="@drawable/layanan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="50dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTambahan"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toEndOf="@id/cvLayanan"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/iconTambahan"
            android:src="@drawable/tambahan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="40dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPelanggan"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cvTransaksi"
        app:layout_constraintStart_toEndOf="@id/cvHarga"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:id="@+id/iconPelanggan"
            android:src="@drawable/pelanggan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="40dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLaporan"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cvLayanan"
        app:layout_constraintStart_toEndOf="@id/cvPelanggan"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:id="@+id/iconLaporan"
            android:src="@drawable/laporan"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="50dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrinter"
        android:layout_width="170dp"
        android:layout_height="140dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cvTambahan"
        app:layout_constraintStart_toEndOf="@id/cvLaporan"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:id="@+id/iconPrinter"
            android:src="@drawable/printer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textSize="20sp"
            android:layout_marginTop="105dp"
            android:layout_marginStart="60dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
