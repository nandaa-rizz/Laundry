<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CabangActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logoo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="0dp"
        android:text="CABANG KAMI"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <EditText
        android:id="@+id/etSource"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:text="🔍"
        android:background="@drawable/bordersource"
        app:layout_constraintTop_toBottomOf="@id/tvCabang"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCabang1"
        android:layout_width="350dp"
        android:layout_height="170dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSource"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:id="@+id/iconCabang1"
            android:src="@drawable/cabang"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang 1:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMKN 6 SKA\n5 ★★★★★"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="150dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCabang2"
        android:layout_width="350dp"
        android:layout_height="170dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvCabang1"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:id="@+id/iconCabang2"
            android:src="@drawable/cabang"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang 2:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depan SPBU Manahan, Surakarta\n4 ★★★★"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="150dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>