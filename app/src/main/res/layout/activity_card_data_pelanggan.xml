<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.DataPelanggan">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvID"
        android:layout_width="380dp"
        android:layout_height="210dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#B59F78"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Pelanggan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/tvHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No HP"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btHubungi"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Hubungi"
            android:backgroundTint="#795757"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"/>

        <Button
            android:id="@+id/btLihat"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Lihat"
            android:backgroundTint="#948979"
            android:layout_marginStart="200dp"
            android:layout_marginTop="150dp"/>

        <!-- RecyclerView untuk Menampilkan Data -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDataPelanggan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>