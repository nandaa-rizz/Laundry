<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayananActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logoo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCuci"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconCuci"
            android:src="@drawable/cuci"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci-Setrika"
            android:textSize="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSetrika"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toEndOf="@+id/cvCuci"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconSetrika"
            android:src="@drawable/setrika"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Setrika"
            android:textSize="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDryclean"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvCuci"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconDry"
            android:src="@drawable/dryclean"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dry Cleaning"
            android:textSize="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSepatu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toEndOf="@id/cvDryclean"
        app:layout_constraintTop_toBottomOf="@id/cvSetrika"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconSepatu"
            android:src="@drawable/sepatu"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Sepatu"
            android:textSize="16dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTas"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvDryclean"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconTas"
            android:src="@drawable/tas"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci Tas"
            android:textSize="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAntar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toEndOf="@id/cvTas"
        app:layout_constraintTop_toBottomOf="@id/cvSepatu"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iconBox"
            android:src="@drawable/box"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antar-Jemput"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>