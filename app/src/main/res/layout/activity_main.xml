<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Nanda"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"/>
    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 Januari 2025"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="230dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHarga"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvEstemasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estemasi Hari Ini"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tvJudul"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/tvRupiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:textSize="12sp"
            android:layout_marginStart="280dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40.000,-"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="300dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:background="@color/black"/>
        <ImageView
            android:id="@+id/ivTransaksi"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/tranksasi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textSize="16sp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="55dp"/>
        <ImageView
            android:id="@+id/ivPelanggan"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="155dp"
            android:src="@drawable/pelanggan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textSize="16sp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="180dp"/>
        <ImageView
            android:id="@+id/ivLaporan"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="270dp"
            android:src="@drawable/laporan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="16sp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="300dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvPeringatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siap melayani pelanggan dengan setulus\nhati"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@+id/cvHarga"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvPengingat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jangan Kecewakan Pelanggan"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPeringatan"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAkun"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPengingat"
        android:layout_margin="10dp">

       <ImageView
           android:layout_width="70dp"
           android:layout_height="60dp"
           android:id="@+id/iconAkun"
           android:src="@drawable/akun"
           android:layout_marginTop="28dp"
           android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="45dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLayanan"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPengingat"
        app:layout_constraintStart_toEndOf="@id/cvAkun"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/iconLayanan"
            android:src="@drawable/layanan"
            android:layout_marginTop="28dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="36dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTambahan"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPengingat"
        app:layout_constraintStart_toEndOf="@id/cvLayanan"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iconTambahan"
            android:src="@drawable/tambahan"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="25dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPegawai"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvAkun"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/iconPegawai"
            android:src="@drawable/pegawai"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pegawai"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="30dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCabang"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cvLayanan"
        app:layout_constraintStart_toEndOf="@id/cvPegawai"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:id="@+id/iconCabang"
            android:src="@drawable/cabang"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="37dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrinter"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="16sp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cvTambahan"
        app:layout_constraintStart_toEndOf="@id/cvCabang"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/iconPrinter"
            android:src="@drawable/printer"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textSize="16dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="40dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>