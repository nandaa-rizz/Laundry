<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/logoo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/etTambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="TAMBAHAN"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCuciS"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/etTambahan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iconCuciS"
            android:src="@drawable/cuci"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuci + Setrika"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.20.000,00/kg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginStart="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMawar"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cvCuciS"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iconMawar"
            android:src="@drawable/rosee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pewangi Mawar"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.10.000,00/kg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginStart="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLotus"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cvMawar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iconLotus"
            android:src="@drawable/lotus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pewangi Lotus"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.15.000,00/kg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginStart="110dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMelati"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cvLotus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iconMelati"
            android:src="@drawable/melatii"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pewangi Melati"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.8.000,00/kg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginStart="110dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLavender"
        android:layout_width="350dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/cvMelati"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/iconLavender"
            android:src="@drawable/lavender"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pewangi Lavender"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.12.000,00/kg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginStart="110dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>