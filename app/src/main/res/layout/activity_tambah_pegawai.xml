<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pelanggan.TambahPelanggan">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="TAMBAH PEGAWAI"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="200dp"
        android:text="@string/nama"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="@string/nama"
        android:paddingStart="10dp"
        android:textColor="#BCCCDC"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNama"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="275dp"
        android:text="@string/alamat"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNama"/>

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="@string/alamat"
        android:paddingStart="10dp"
        android:textColor="#BCCCDC"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlamat"/>

    <TextView
        android:id="@+id/tvHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="160dp"
        android:text="@string/nomor"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAlamat"/>

    <EditText
        android:id="@+id/etHP"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="@string/nomor"
        android:paddingStart="10dp"
        android:textColor="#BCCCDC"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHP"/>

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="210dp"
        android:text="@string/tanggal"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etHP"/>

    <EditText
        android:id="@+id/etTanggal"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="@string/tanggal"
        android:paddingStart="10dp"
        android:textColor="#BCCCDC"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"/>

    <TextView
        android:id="@+id/tvJenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="230dp"
        app:layout_constraintTop_toBottomOf="@id/etTanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvJenis"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp" />
    <TextView
        android:id="@+id/tvLaki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Laki"
        app:layout_constraintStart_toEndOf="@id/rb1"
        app:layout_constraintTop_toBottomOf="@id/tvJenis"
        android:textSize="16sp"
        android:layout_marginTop="13dp"/>

    <RadioButton
        android:id="@+id/rb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvJenis"
        app:layout_constraintStart_toEndOf="@id/tvLaki"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/tvPerempuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Perempuan"
        app:layout_constraintStart_toEndOf="@id/rb2"
        app:layout_constraintTop_toBottomOf="@id/tvJenis"
        android:layout_marginTop="13dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btSimpan"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="@string/simpan"
        android:backgroundTint="#87805E"
        app:layout_constraintTop_toBottomOf="@id/tvPerempuan"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>